<!--pages/account/index.wxml-->

 <van-dialog
  use-slot
  async-close
  show="{{ show }}"
  show-cancel-button
  confirm-button-open-type="getUserInfo"
  bind:close="onClose"
  bind:getuserinfo="bindGetUserInfo"
>
<view>
    <view class="title">需要您的授权</view>
    <view class="profile">为了提供更好地服务</view>
    <view class="profile">请在稍后的提示框中点击“允许”</view>
    <image class="logo" src="/images/allow.jpg" mode="widthFix" />
    <view style='margin-top: 30rpx;'>\n</view>
</view>
</van-dialog>

<view class="user-info">
  <open-data class="user-avatar" type="userAvatarUrl"></open-data>
  <open-data class="user-nick-name" type="userNickName"></open-data>
</view>